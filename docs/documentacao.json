swagger: '2.0'
info:
  version: 1.0.0
  title: CRUD - Traineer
  description: Treinamento 2019
  termsOfService: nullable
  contact:
    name: 'Ulisses Santos Oliveira'
    email: ufs.ulisses0@gmail.com 
    url: 'https://github.com/skethy/CRUD---Traineer'
  license:
    name: 2019 © SOFTEAM
    url: 'http://softeam.com.br'
schemes:
  - https
basePath: '/localhost:3000'
paths:
  /user:
    get:
      summary: Retorna todos os funcionários
      description: Retorna todos os funcionários
      tags:
        - Func
      parameters: []
      responses:
        '200':
          description: Funcionários Encontrados!
        '500':
          description: Erro ao Encontrar os Funcionarios!!
    post:
      summary: cria um novo usuário
      description: criar um novo usuário
      tags:
        - Func
      responses:
        '201':
          description: Funcionário Criado!
          schema:
            properties:
              name:
                type: string
                example: Nome de Teste
              cpf:
                type: number
                example: 06485295145
              telefone:
                type: number
                example: 79981458745
              cep:
                type: string
                example: 49568941
              numero:
                type: number
                example: 175
              complemento:
                type: string
                example: casa
            required:
              - cpf
              - name
        '500':
          description: Erro ao criar"! 

  '/user/{cpf}':
    get:
      summary: Retorna um usuário a partir do cpf
      tags:
        - Func
      parameters:
        - name: cpf
          in: path
          description: cpf do usuário desejado
          required: true
          type: string
      responses:
        '200':
          description: Funcionário encontrado
        '404':
          description: Funcionário não encontrado
        '500':
          description: Deu erro!
    put:
      summary: Atualiza um Funcionário
      tags:
        - Func
      parameters:
        - name: cpf
          in: path
          required: true
          type: number
          format: cpf
          description: cpf do usuário a ser atualizado
      responses:
        '200':
          description: Funcionário atualizado
          schema:
            properties:
              name:
                type: string
                example: Funcionario Teste
              cpf:
                type: string
                example: 65484596257
              telefone:
                type: number
                example: 79984569874
            required:
              - email
        '500':
          description: Deu erro!
    delete:
      summary: Deleta um Funcionário
      tags:
        - Func
      parameters:
        - name: cpf
          in: path
          required: true
          type: number
          format: cpf
          description: cpf do usuário a ser deletado
      responses:
        '200':
          description: Funcionário removido
        '404':
          description: Funcionário não encontrado
        '500':
          description: Deu erro!
definitions:
  Func:
    type: object
    required:
      - cpf
    properties:
      name:
        type: string
        example: Funcionario Teste
      cpf:
        type: number
        example: 65484596257
      telefone:
        type: number
        example: 79984562541
      cep:
        type: string
        example: 49568941
      numero:
        type: number
        example: 175
      complemento:
        type: string
        example: casa